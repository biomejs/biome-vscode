{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"noConsole": "warn"
			},
			"style": {
				"noParameterAssign": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
