{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2021",
		"lib": ["ES2021"],
		"outDir": "out",
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
